<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/design_dialog"
    android:padding="10dp"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리뷰 작성"
        android:fontFamily="@font/myfont"
        android:textSize="33dp"         android:layout_margin="15dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="해당 지점의 꿀팁을 공유해 봐!"
        android:fontFamily="@font/myfont_r"
        android:textSize="15dp"         android:textColor="@android:color/black"
        android:gravity="center"/>

    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="역사, 주변 맛집, 재밌는 썰 등을 적어보자!"
        android:fontFamily="@font/myfont_r"
        android:textSize="15dp"        android:textColor="@android:color/black"
        android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="15dp"
        android:layout_height="wrap_content"
        android:hint="5자 이상 작성해 주세요."
        android:fontFamily="@font/myfont_r"
        android:textSize="17dp"
        android:maxLength="50"
        android:id="@+id/ReviewDialog_EditText"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="15dp"
        >
        <Button
            android:id="@+id/ReviewDialog_Btn"
            android:text="작  성"
            android:fontFamily="@font/myfont_r"
            android:textSize="20dp"            android:background="@drawable/design_button"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginRight="20dp"
            />
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/ReviewDialog_CanBtn"
            android:text="취  소"
            android:fontFamily="@font/myfont_r"
            android:textSize="20dp"            android:textStyle="bold"
            android:background="@drawable/design_button"
            android:layout_gravity="center"
            android:layout_width="110dp"
            android:layout_height="55dp"
            />
    </LinearLayout>

</LinearLayout>