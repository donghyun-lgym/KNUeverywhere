<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ui.MapInfo.MapInfoActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <!--    여기에 해당 이미지뷰 삽입-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/MapInfoActivity_ImageView"
                android:background="@android:color/holo_orange_light"/>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/MapInfoActivity_NameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름이름"
                    android:layout_marginLeft="20dp"
                    android:textSize="30dp"
                    android:gravity="right"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/MapInfoActivity_SubNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설명설명"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="43dp">

                <Button
                    android:id="@+id/MapInfoActivity_StartButton"
                    android:layout_width="130dp"
                    android:layout_height="43dp"
                    android:text="⊙  출 발"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:layout_marginRight="13dp"
                    android:textStyle="bold"
                    android:background="@drawable/design_button2"/>

                <Button
                    android:id="@+id/MapInfoActivity_ArrivalButton"
                    android:layout_width="130dp"
                    android:layout_height="43dp"
                    android:text="∇  도 착"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:layout_marginLeft="13dp"
                    android:textStyle="bold"
                    android:background="@drawable/design_button2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/MapInfoActivity_reviewButton"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="리뷰"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/MapInfoActivity_picButton"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="사진"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/MapInfoActivity_aroundButton"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="주변"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="2dp"
                ></View>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/MapInfoActivity_FrameLayout"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>