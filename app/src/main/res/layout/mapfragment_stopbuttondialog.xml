<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/design_dialog"
    android:padding="10dp"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="탐방을 중지하시겠습니까?"
        android:fontFamily="@font/myfont"
        android:textSize="35dp"        android:layout_margin="15dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 탐방 정보는 무효처리 됩니다."
        android:fontFamily="@font/myfont_r"
        android:textSize="20dp"         android:textColor="@android:color/black"
        android:gravity="center"/>

    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신중히 결정 해 주세요."
        android:fontFamily="@font/myfont_r"
        android:textSize="20dp"           android:textColor="@android:color/black"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="15dp"
        >
        <Button
            android:id="@+id/StopDialog_Btn"
            android:text="탐 방  중 지"
            android:fontFamily="@font/myfont"
            android:textSize="23dp"               android:background="@drawable/design_button"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            />
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/StopDialog_CanBtn"
            android:text="취  소"
            android:fontFamily="@font/myfont"
            android:textSize="23dp"              android:textStyle="bold"
            android:background="@drawable/design_button"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</LinearLayout>