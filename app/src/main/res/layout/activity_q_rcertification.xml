<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".QRcertificationActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="경북대학교"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/QRActivity_CourseTextView"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="Loading..."
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/QRActivity_CourseDetailTextView"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Loading..."
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="인증샷 업로드, 이는 갤러리에서 확인 가능"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:id="@+id/QRActivity_Button"
        android:text="Loading..."
        android:background="@drawable/design_button2"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        />
</LinearLayout>