<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".QRcertificationActivity">

    <ImageView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="center"
        android:layout_width="353dp"
        android:layout_height="180dp"
        android:background="@drawable/login_logo"/>
    <LinearLayout
        android:id="@+id/QRActivity_t1"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/myfont"
            android:textSize="40dp"
            android:textColor="@android:color/black"
            android:text="경북대학교의"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            />
        <TextView
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/QRActivity_CourseTextView"
            android:fontFamily="@font/myfont"
            android:textSize="40dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>


    <TextView
        app:layout_constraintTop_toBottomOf="@+id/QRActivity_t1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/QRActivity_CourseDetailTextView"
        android:fontFamily="@font/myfont"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/QRActivity_CourseDetailTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="20dp"
        android:id="@+id/QRActivity_ImageView"
        android:layout_gravity="center"
        android:background="@drawable/qr_certifi_img"
        android:layout_width="350dp"
        android:layout_height="210dp"/>

    <Button
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:id="@+id/QRActivity_Button"
        android:text="인   증"
        android:background="@drawable/design_button2"
        android:layout_gravity="center"
        android:fontFamily="@font/myfont_r"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>