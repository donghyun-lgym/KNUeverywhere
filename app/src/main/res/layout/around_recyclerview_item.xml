<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_border"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="10dp">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/Around_item_ImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/Around_item_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="지점명"
        android:textColor="@android:color/black"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:textSize="17dp" />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Around_item_nameTextView"
        android:id="@+id/Around_item_typeTextView"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="25dp"
        android:text="타입"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/darker_gray"
        android:fontFamily="@font/myfont_r"
        android:textSize="13dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/Around_item_nameTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/Around_item_timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="영업시간"
        android:textColor="@android:color/black"
        android:fontFamily="@font/myfont_r"
        android:gravity="center"
        android:textSize="15dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/Around_item_timeTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/Around_item_addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="주소"
        android:textColor="@android:color/black"
        android:fontFamily="@font/myfont_r"
        android:gravity="center"
        android:textSize="15dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/Around_item_addressTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/Around_item_contentTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="제휴"
        android:textColor="@android:color/black"
        android:fontFamily="@font/myfont_r"
        android:gravity="center"
        android:textSize="15dp" />
</androidx.constraintlayout.widget.ConstraintLayout>